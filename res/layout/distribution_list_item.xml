<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content">
	<ImageView android:id="@+id/lunchTodayPic" android:layout_width="105dp"
		android:layout_height="105dp" android:visibility="visible"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"/>
	<LinearLayout android:orientation="vertical" android:layout_height="105dp"
	    android:layout_width="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    android:paddingBottom="@dimen/activity_vertical_margin">
	    <TextView android:id="@+id/distributionName" android:layout_width="wrap_content"
		    android:layout_height="wrap_content" android:textColor="@color/theme_red"
		    android:textAppearance="?android:attr/textAppearanceMedium"/>
		<TextView android:id="@+id/distributionAddress" android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		<TextView android:id="@+id/distributionTime" android:layout_width="wrap_content"
		    android:layout_height="wrap_content" android:text="送饭时间: 11:00-12:00"/>
	</LinearLayout>
</LinearLayout>