<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/my_actionbar_style</item>
        <item name="actionBarTabStyle">@style/my_actionbar_tab_style</item>
    </style>
    
    <style name="my_actionbar_style" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/theme_red</item>
        <item name="backgroundStacked">@color/thin_grey</item>
        <item name="icon">@android:color/transparent</item> <!--  hide home icon -->
        <item name="displayOptions">showHome</item> <!--  get rid of title and drawer indicator still show -->
    </style>
    
    <style name="my_actionbar_tab_style" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_background_select</item>
        <item name="divider">@null</item>
        <item name="dividerPadding">0dp</item>
    </style>
</resources>
